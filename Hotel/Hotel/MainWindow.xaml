<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="Hotel room" Height="350" Width="525">
    <Grid>
        <Label Content="Room Number:" HorizontalAlignment="Left" Height="31" Margin="51,38,0,0" VerticalAlignment="Top" Width="130" FontSize="16"/>
        <TextBox x:Name="txtRoomNumber" HorizontalAlignment="Left" Height="31" Margin="263,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="16"/>
        <CheckBox x:Name="chkSuite" Content="Is this a hotel suite?" HorizontalAlignment="Left" Height="32" Margin="94,93,0,0" VerticalAlignment="Top" Width="229" FontSize="16"/>
        <Label x:Name="lblDisplay" Content="" HorizontalAlignment="Left" Height="98" Margin="64,161,0,0" VerticalAlignment="Top" Width="379" FontSize="16" BorderThickness="1" BorderBrush="Black"/>
        <Button x:Name="btnDisplay" Content="Show Price" HorizontalAlignment="Left" Height="32" Margin="340,93,0,0" VerticalAlignment="Top" Width="135" Click="btnDisplay_Click"/>

    </Grid>
</Window>
